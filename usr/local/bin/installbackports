#!/bin/sh

BACKPORTS_REPO="/etc/apt/sources.list.d/backports.list"

echo "deb http://ftp.debian.org/debian wheezy-backports main contrib non-free" > $BACKPORTS_REPO
echo "deb http://packages.omv-extras.org/debian/ kralizec-backports main" >> $BACKPORTS_REPO

echo "Updating..."
apt-get --quiet update > /dev/null 2>&1

SKIP=false
AMD64=false
ARCH="`/bin/uname -m`"

case "$ARCH" in
    *x86_64*)
        AMD64=true
        ;;
    *486*)
        AMD64=false
        ;;
    *686*)
        AMD64=false
        ;;
    *)
        SKIP=true
        ;;
esac

if $SKIP; then
    echo "Unsupported kernel and/or processor"
else
    echo "Install backports 3.12 kernel and headers"
    apt-get -t wheezy-backports --yes --force-yes --fix-missing install linux-base initramfs-tools=0.115~bpo70+1
    if $AMD64; then
        apt-get -t wheezy-backports --yes --force-yes --fix-missing install linux-image-3.12-0.bpo.1-amd64 linux-headers-3.12-0.bpo.1-all firmware-linux firmware-linux-free
    else
        apt-get -t wheezy-backports --yes --force-yes --fix-missing install linux-image-3.12-0.bpo.1-486 linux-headers-3.12-0.bpo.1-all firmware-linux firmware-linux-free
    fi
    echo "..."
    echo "Please reboot to use new kernel"
fi
