#!/bin/sh

echo "Clean apt cache files"
/usr/bin/apt-get clean

echo "\nClear available dpkg packages"
dpkg --clear-avail

echo "\nRemove apt lists"
rm -rfv /var/lib/apt/lists/*

echo "\nRemove OpenMediaVault cache packages"
rm -fv /var/cache/openmediavault/archives/*

echo "\nCreate new OpenMediaVault packages file"
touch /var/cache/openmediavault/archives/Packages

echo "\nUpdate apt"
/usr/bin/apt-get update
